<!DOCTYPE html>
<html lang="{{site.locale}}">
{{> html-head }}

<body>
    {{> header active="contribute" }}

    <main>
        <div class="container has-side-nav">

            <aside>
                <ul>
                    <li{{#equals path site.contribute.link}} class="active"{{/equals}}>
                        <a href="/{{site.locale}}/{{site.contribute.link}}">{{site.contribute.text}}</a>
                    </li>
                    <li{{#equals path site.contribute.development.link}} class="active"{{/equals}}>
                        <a href="/{{site.locale}}/{{site.contribute.development.link}}">{{site.contribute.development.text}}</a>
                    </li>
                </ul>
            </aside>

            <article>
                {{{ contents }}}
            </article>

        </div>
    </main>

    {{> footer }}
</body>
</html>
